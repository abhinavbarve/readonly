    <!-- calling articulate.js -->
    <script>
        function speak(obj) {
        $(obj).articulate('speak');
        };


        function pause() {
        $().articulate('pause');
        };


        function resume() {
        $().articulate('resume');
        };


        function stop() {
        $().articulate('stop');
        };
    

    </script>

    <!-- typeahead.js cdn for search bar -->
    <script  type="text/javascript" src="https://twitter.github.io/typeahead.js/releases/latest/typeahead.bundle.js"></script>
    
    <!-- calling typeahead -->
    <script>

    $(document).ready( () => {

        async function getBooks() {
    
            await fetch('http://localhost:8080/database/bookList')
                .then(response => {
                    
                    response.json().then((result) => {
    
                        bookList = result
                        // console.log(bookList)
                        var books = new Bloodhound({
                            datumTokenizer: Bloodhound.tokenizers.whitespace,
                            queryTokenizer: Bloodhound.tokenizers.whitespace,

                            local: bookList 

                        });

                        // Initializing the typeahead
                        $('.typeahead').typeahead({
                            hint: true,
                            highlight: true,
                            minLength: 1
                        },
                            {
                                name: 'books',
                                source: books,
                            });                        
    
                    })

                })
    
        }
       
        getBooks()

    });  
    </script>
    
